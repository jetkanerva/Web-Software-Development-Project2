<h1><%= it.question.question_text %></h1>
<ul>
<% if (it.quizzes && it.quizzes.length > 0) { %>
    <% for(let quiz of it.quizzes) { %>
        <li>
            <%= quiz.option_text %>
            <form method="POST" action="/quiz/<%= it.question.topic_id %>/questions/<%= quiz.id %>/options/<%= quiz.id %>">
                  <input type="submit" value="Choose">
            </form>
        </li>
    <% } %>
<% } else { %>
    <li>No Options Yet</li>
<% } %>
</ul>