<h1><%= it.question.question_text %></h1>
<ul>
<% if (it.quizzes.options && it.quizzes.options.length > 0) { %>
    <% for(let option of it.quizzes.options) { %>
        <li>
            <%= option.option_text %>
            <form method="POST" action="/quiz/<%= it.quizzes.topic_id %>/questions/<%= it.quizzes.id %>/options/<%= option.id %>">
                <input type="submit" value="Choose">
            </form>
        </li>
    <% } %>
<% } else { %>
    <li>No Options Yet</li>
<% } %>
</ul>